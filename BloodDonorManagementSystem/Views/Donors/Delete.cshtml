@model BloodDonorManagementSystem.Models.Donor
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3 class="col-4 mb-3" style="text-align:center;">Are you sure want to delete?</h3>

        @Html.HiddenFor(x => x.DonorId)
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.DonorName, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.DonorName)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Blood.BloodGroup, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.Blood.BloodGroup)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Address, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.Address)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.Email)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.Phone)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.DonationDate, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.DonationDate)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.IsAvailable, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.IsAvailable)
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                <img src="~/Assets/@Model.Picture" class="img-thumbnail" style="width:120px; height:110px;" />
            </div>
        </div>
        @using (Html.BeginForm("Delete", "Donors", new { id = Model.DonorId }, FormMethod.Post))
        {

            <div class="col-4 offset-2">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
            </div>
        }
    </div>
    <div class="col-1" style="background-color:lightgrey">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>

