@model BloodDonorManagementSystem.ViewModel.DonorEditModel
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-12">
        <h3 class="col-7 mb-5" style="background-color: darkseagreen; text-align:center; padding-bottom:2px;">Edit Donor</h3>
        @using (Html.BeginForm("Edit", "Donors", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.DonorId)
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.DonorName, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.DonorName, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.DonorName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.BloodId, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.DropDownListFor(x => x.BloodId, new SelectList(ViewBag.Bloods, "BloodId", "BloodGroup"), "Select", new { @class = "form-select form-select-sm" })
                    @Html.ValidationMessageFor(x => x.BloodId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Address, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.DonationDate, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.DonationDate, new { @class = "form-control form-control-sm date" })
                    @Html.ValidationMessageFor(x => x.DonationDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.IsAvailable, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.CheckBoxFor(x => x.IsAvailable, new { @class = "form-check" })
                    @Html.ValidationMessageFor(x => x.IsAvailable, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-5">
                    @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control-sm", type = "file" })
                    @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
                </div>
                <div class="col-1">
                    <img src="~/Assets/@ViewBag.CurrentPic" class="img-thumbnail" style="width:80px; height:75px;" />
                </div>
            </div>
            <div class="form-group row mb-1">
                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        }
    </div>
    <div class="col-1" style="background-color:lightgrey">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>
@section styles{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        function onSuccess() {
            $("#f").trigger('reset');
        }
        $(".date").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>
}


