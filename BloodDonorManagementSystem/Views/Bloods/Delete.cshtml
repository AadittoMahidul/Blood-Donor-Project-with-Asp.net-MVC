@model BloodDonorManagementSystem.Models.Blood
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <h3 class="col-3 mb-3" style="text-align:center;">Confirm delete</h3>
    </div>
    <div class="col-12">
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.BloodGroup, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.BloodGroup)

            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.BloodDetails, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-5">
                @Html.DisplayFor(x => x.BloodDetails)

            </div>
        </div>       
        <div class="form-group row mb-1">

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.BloodId)
                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            }
        </div>
    </div>
    <div class="col-1" style="background-color:lightgrey">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>

