@model BloodDonorManagementSystem.Models.Blood
@using (Ajax.BeginForm("CreateBlood", "Bloods", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    LoadingElementId = "spinner",
    OnSuccess = "onSuccess"
}, new { id = "f" }))
{
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.BloodGroup, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-5">
            @Html.EnumDropDownListFor(x => x.BloodGroup, new { @class = "form-select form-select-sm" })
            @Html.ValidationMessageFor(x => x.BloodGroup, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.BloodDetails, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-5">
            @Html.TextBoxFor(x => x.BloodDetails, new { @class = "form-control form-control-sm", type = "money" })
            @Html.ValidationMessageFor(x => x.BloodDetails, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}